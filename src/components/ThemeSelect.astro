---
import themes from './themes'
---

<div class='dropdown dropdown-end'>
  <label tabindex='0' class='btn btn-ghost capitalize'>Change Theme</label>
  <ul
    tabindex='0'
    class='dropdown-content z-10 p-2 shadow bg-base-100 rounded-box w-52 border border-base-300 max-h-80 overflow-y-scroll flex flex-col'
  >
    {
      themes.map((theme) => (
        <button
          data-set-theme={theme}
          class='theme-btn bg-base-100 px-2 py-4 my-1 rounded border border-base-200 w-full flex justify-between'
          data-theme={theme}
        >
          <div class='primary capitalize'>{theme}</div>
          <div class='flex gap-1'>
            {['primary', 'secondary', 'accent', 'neutral'].map((colour) => (
              <div class={`bg-${colour} w-3 h-full rounded`}>&nbsp;</div>
            ))}
          </div>
        </button>
      ))
    }
  </ul>
</div>
