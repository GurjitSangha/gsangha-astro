---
import themes from './themes'
---

<div class='dropdown dropdown-end'>
  <label tabindex='0' class='btn btn-ghost capitalize flex gap-1'
    ><svg
      width='24'
      height='24'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      class='w-6 h-6 stroke-current'
      ><path
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01'
      ></path></svg
    ></label
  >
  <ul
    tabindex='0'
    class='dropdown-content z-10 p-2 shadow bg-base-100 rounded-box w-52 border border-base-300 max-h-80 overflow-y-scroll flex flex-col'
  >
    {
      themes.map((theme) => (
        <button
          data-set-theme={theme}
          class='theme-btn bg-base-100 px-2 py-4 my-1 rounded border border-base-200 w-full flex justify-between'
          data-theme={theme}
        >
          <div class='primary capitalize'>{theme}</div>
          <div class='flex gap-1'>
            <div class={`bg-primary w-3 h-full rounded`}>&nbsp;</div>
            <div class={`bg-secondary w-3 h-full rounded`}>&nbsp;</div>
            <div class={`bg-accent w-3 h-full rounded`}>&nbsp;</div>
          </div>
        </button>
      ))
    }
  </ul>
</div>
